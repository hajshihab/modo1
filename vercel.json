{
  "version": 2,
  "name": "ecommerce-platform",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://ecommerce-platform.vercel.app",
    "NEXT_PUBLIC_API_URL": "https://your-backend.railway.app"
  },
  "regions": ["iad1", "fra1", "sin1"],
  "functions": {
    "frontend/pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
}
